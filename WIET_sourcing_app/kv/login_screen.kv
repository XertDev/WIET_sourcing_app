<LoginScreen>:
    MDCard:
        size_hint: .4, .4
        pos_hint: {"center_x": .5, "center_y": .5}
        padding: "10dp"
        RelativeLayout:
            MDBoxLayout
                padding: "10px"
                orientation: "vertical"

                MDLabel:
                    text: "WIET Sourcing"
                    halign: "center"
                MDTextField:
                    id: email
                    hint_text: "Email"
                    write_tab: False
                MDTextField:
                    id: password
                    hint_text: "Password"
                    write_tab: False
                Widget:
                MDBoxLayout:
                    orientation: "horizontal"
                    padding: [0, -10, 0, 0]
                    RelativeLayout:
                        MDRectangleFlatButton:
                            pos_hint: {"left": 1, "bottom": 1}
                            text: "Sign in!"
                            on_release: root.sign_in()

                        MDRectangleFlatButton:
                            pos_hint: {"right": 1}
                            text: "Sign up!"
                            on_release: root.move_to_signup()
