<ConfirmEmailScreen>:
    MDCard:
        size_hint: .4, .3
        pos_hint: {"center_x": .5, "center_y": .5}
        padding: "10dp"
        RelativeLayout:
            MDBoxLayout
                padding: "10px"
                orientation: "vertical"

                MDLabel:
                    text: "Code"
                    halign: "center"
                MDTextField:
                    id: code
                    hint_text: "Confirmation code"
                    write_tab: False

                Widget:
                MDBoxLayout:
                    orientation: "horizontal"
                    padding: [0, -10, 0, 0]
                    RelativeLayout:
                        MDRectangleFlatButton:
                            id: button_one
                            pos_hint: {"left": 1, "bottom": 1}
                            text: "OK"
                            on_release: root.confirm_email()
