#:import colors kivymd.color_definitions.colors
#:import utils kivy.utils

<MainScreen>
    MDBoxLayout:
        MDBoxLayout:
            md_bg_color: utils.get_color_from_hex(colors["BlueGray"]["50"])
            size_hint:  0.4, 1
            orientation: "vertical"
            AnchorLayout:
                anchor_x: "center"
                size_hint_y: None
                height: avatar.height
                Image:
                    id: avatar
                    size_hint: None, None
                    size: "150dp", "150dp"
                    source: "WIET_sourcing_app/assets/placeimg_128_128_animals.jpg"

            MDLabel:
                id: username
                text: ""
                halign: "center"
                font_style: "Button"
                size_hint_y: None
                height: self.texture_size[1]

            MDLabel:
                text: "0 lvl"
                halign: "center"
                font_style: "Caption"
                size_hint_y: None
                height: self.texture_size[1]
            Widget:

        MDBoxLayout:
            height: self.minimum_height
            orientation: "vertical"
            MDBoxLayout:
                id: filter_area
                size_hint: 1, 0.2
                padding: "20dp", 0
                MDTextFieldRound:
                    pos_hint: {"center_y": 0.5}
                    size_hint: None, None
                    multiline: False
            ScrollView:
                scroll_wheel_distance: "100dp"
                GridLayout:
                    id: set_list
                    size_hint_y: None
                    cols: 1
                    minimum_height: self.height
                    spacing: "10dp"
                    padding: "10dp"

<SetButton@MDRectangleFlatButton>:
